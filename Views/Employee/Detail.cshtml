@model EmployeeClient.Models.Domain.Employee
@{
    ViewData["Title"] = "View Employee";
}
<div class="card-header">
    <h3 class="text-uppercase font-weight-bold">View Employee Details</h3>
</div>
<div class="card-body">
    <form asp-action="Edit">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                    <label asp-for="Id" class="control-label"></label>
                    <input asp-for="Id" readonly class="form-control-plaintext" />
                    <span asp-validation-for="Id" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="FirstName" class="control-label"></label>
                    <input asp-for="FirstName" class="form-control-plaintext" />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="LastName" class="control-label"></label>
                    <input asp-for="LastName" class="form-control-plaintext" />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="Email" class="control-label"></label>
                    <input asp-for="Email" class="form-control-plaintext" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="County" class="control-label"></label>
                    <input asp-for="County" class="form-control-plaintext" />
                    <span asp-validation-for="County" class="text-danger"></span>
                </div>
            </div>
        </div>
        <br />
        <div class="row">
            <div class="form-group">
                <a class="btn btn-dark btn-lg" asp-controller="Employee" asp-action="Edit" asp-route-id="@Model.Id" type="submit">What to Update Employee? Click Here!!</a>
                <a class="btn btn-info btn-lg" asp-controller="Employee" asp-action="Index">Back to List</a>
            </div>
        </div>
    </form>
</div>

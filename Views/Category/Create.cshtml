@model EmployeeClient.Models.Domain.Category
@{
    ViewData["Title"] = "Create Category";
}
<div class="card-header">
    <h3 style="font-family: monospace; font-weight: bold;">Create category</h3>
</div>
<div class="card-body">
    <div class="col-md-8">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CategoryName" class="control-label"></label>
                <input asp-for="CategoryName" class="form-control" oninput="this.value = this.value.toUpperCase()"/>
                <span asp-validation-for="CategoryName" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="Status" />
            <div class="form-group pt-2">
                <button type="submit" style="font-family: monospace; font-weight: bold;" class="btn btn-primary btn-lg"><i class="fa fa-plus-square"></i> Create Category</button>
                <a class="btn btn-danger btn-lg" asp-controller="Category" asp-action="Index"><i class="fa fa-close"></i></a>
            </div>
        </form>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

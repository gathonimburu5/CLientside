@model IEnumerable<EmployeeClient.Models.Domain.Category>
@{
    ViewData["Title"] = "Category List";
}
<div class="card-header">
    <h5>Category List</h5>
</div>
<div class="card-body">
    <div class="table-responsive">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Ref</th>
                    <th>Category Name</th>
                    <th><a class="btn btn-dark btn-sm" asp-controller="Category" asp-action="Create">New Category</a></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var category in Model)
                {
                    <tr>
                        <td>@category.CategoryId</td>
                        <td>@category.CategoryName</td>
                        <td>
                            <a class="btn btn-success btn-sm" asp-controller="Category" asp-action="Update" asp-route-id="@category.CategoryId">Edit</a>
                            <a class="btn btn-secondary btn-sm" asp-controller="Category" asp-action="Detail" asp-route-id="@category.CategoryId">View</a>
                            <a class="btn btn-danger btn-sm" asp-controller="Category" asp-action="Delete" asp-route-id="@category.CategoryId">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@model IEnumerable<EmployeeClient.Models.Domain.Supplier>
@{
    ViewData["Title"] = "Supplier List";
}
<div class="card-header">
    <h4>All Supplier List</h4>
</div>
<div class="card-body">
    <div class="table-responsive">
        <table class="table table-hover table-striped">
            <thead>
                <tr>
                    <th>Supplier</th>
                    <th>Email</th>
                    <th>Bank</th>
                    <th>Branch</th>
                    <th>Postal</th>
                    <th>Address</th>
                    <th>KRA</th>
                    <th>Phone</th>
                    <th>Currency</th>
                    <th><a class="btn btn-dark btn-sm" asp-action="Create"><i class="fa fa-plus-square-o"></i> New Supplier</a></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var supplier in Model)
                {
                    <tr>
                        <td>@supplier.SupplierName</td>
                        <td>@supplier.SupplierEmail</td>
                        <td>@supplier.BankName</td>
                        <td>@supplier.Branch</td>
                        <td>@supplier.PostalAddress</td>
                        <td>@supplier.PhysicalAddress</td>
                        <td>@supplier.KRAPin</td>
                        <td>@supplier.PhoneNumber</td>
                        <td>@supplier.Currency.CurrencyName</td>
                        <td>
                            <select class="form-control form-control-sm form-select form-select-sm" style="font-size: 12px; font-weight: bold; height: 30px;" onchange="ClickConfirmation(event)">
                                <option value="">Select Action</option>
                                <option value="@Url.Action("Edit", "Supplier", new{ id = @supplier.SupplierId })">Update Suppliers</option>
                                <option value="@Url.Action("Satement", "Supplier")">Supplier Statement</option>
                                <option value="@Url.Action("Ledger", "Supplier")">Supplier Ledger</option>
                                <option value="@Url.Action("Delete", "Supplier", new{ id = @supplier.SupplierId })">Delete Suppliers</option>
                            </select>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script type="text/javascript">
        function ClickConfirmation(event) {
            var selectEvent = event.target;
            var value = selectEvent.value;
            if (value.startsWith("/Supplier/Delete/")) {
                var confirmMessage = window.confirm("Are you sure you want to delete this invoice? ");
                if (confirmMessage) {
                    window.location.href = value;
                }
            } else if (value.startsWith("/Supplier/Edit/")) {
                window.location.href = value;
            }else if(value.startsWith("/Supplier/Statement/")){
                window.location.href = value;
            }else if(value.startsWith("/supplier/Ledger/")){
                window.location.href = value;
            }
        }
    </script>
}

@model EmployeeClient.Models.Domain.Discount
@{
    ViewData["Title"] = "Update Discount";
}
<div class="card-header">
    <h3>Updating Discount</h3>
</div>
<div class="card-body">
    <form asp-action="Edit">
        <div class="col-md-8">
            <div class="text-danger" asp-validation-summary="ModelOnly"></div>
            <input type="hidden" asp-for="DiscountId" />
            <div class="form-group">
                <label asp-for="DiscountName" class="form-label text-uppercase"></label>
                <input class="form-control" asp-for="DiscountName" oninput="this.value = this.value.toUpperCase()" />
                <span class="text-danger" asp-validation-for="DiscountName"></span>
            </div>
            <div class="form-group">
                <label asp-for="DiscountValue" class="form-label"></label>
                <input class="form-control" asp-for="DiscountValue" />
                <span class="text-danger" asp-validation-for="DiscountValue"></span>
            </div>
            <div class="form-group">
                <label asp-for="StartDate" class="form-label"></label>
                <div class="input-group">
                    <div class="input-group-text" id="startDateIcon"><i class="fa fa-calendar"></i></div>
                    <input class="form-control" asp-for="StartDate" aria-describedby="startDateIcon" />
                </div>
                <span class="text-danger" asp-validation-for="StartDate"></span>
            </div>
            <div class="form-group">
                <label asp-for="ExpireDate" class="form-label"></label>
                <div class="input-group">
                    <div class="input-group-text" id="expireDateIcon"><i class="fa fa-calendar"></i></div>
                    <input class="form-control" asp-for="ExpireDate" aria-describedby="expireDateIcon" />
                </div>
                <span class="text-danger" asp-validation-for="ExpireDate"></span>
            </div>
            <div class="form-group pt-2 pull-right">
                <button type="submit" class="btn btn-primary"><i class="fa fa-edit"></i> Update Discount</button>
                <a class="btn btn-danger" asp-controller="Discount" asp-action="Index"><i class="fa fa-close"></i></a>
            </div>
        </div>
    </form>
</div>
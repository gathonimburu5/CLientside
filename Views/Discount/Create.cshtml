@model EmployeeClient.Models.Domain.Discount
@{
    ViewData["Title"] = "Create Discount";
}
<div class="card-header">
    <h3 style="font-family: monospace; font-weight: bold;">Adding Discount</h3>
</div>
<div class="card-body">
    <form asp-controller="Discount" asp-action="Create">
        <div class="col-md-8">
            <div class="text-danger" asp-validation-summary="ModelOnly"></div>
            <div class="form-group">
                <label style="font-family: monospace; font-weight: bold;" asp-for="DiscountName" class="form-label"></label>
                <input class="form-control text-uppercase" asp-for="DiscountName" oninput="this.value = this.value.toUpperCase()" />
                <span class="text-danger" asp-validation-for="DiscountName"></span>
            </div>
            <div class="form-group">
                <label style="font-family: monospace; font-weight: bold;" asp-for="DiscountValue" class="form-label"></label>
                <input class="form-control" asp-for="DiscountValue" />
                <span class="text-danger" asp-validation-for="DiscountValue"></span>
            </div>
            <div class="form-group">
                <label style="font-family: monospace; font-weight: bold;" asp-for="StartDate" class="form-label"></label>
                <div class="input-group">
                    <div class="input-group-text" id="startDateIcon"><i class="fa fa-calendar"></i></div>
                    <input class="form-control" asp-for="StartDate" aria-describedby="startDateIcon" />
                </div>
                <span class="text-danger" asp-validation-for="StartDate"></span>
            </div>
            <div class="form-group">
                <label style="font-family: monospace; font-weight: bold;" asp-for="ExpireDate" class="form-label"></label>
                <div class="input-group">
                    <div class="input-group-text" id="expireDateIcon"><i class="fa fa-calendar"></i></div>
                    <input class="form-control" asp-for="ExpireDate" aria-describedby="expireDateIcon" />
                </div>
                <span class="text-danger" asp-validation-for="ExpireDate"></span>
            </div>
            <input type="hidden" asp-for="Status" />
            <div class="form-group pt-2 pull-right">
                <button type="submit" class="btn btn-primary btn-lg"><i class="fa fa-plus-circle"></i> Submit Discount</button>
                <a class="btn btn-danger btn-lg" asp-controller="Discount" asp-action="Index"><i class="fa fa-close"></i></a>
            </div>
        </div>
    </form>
</div>

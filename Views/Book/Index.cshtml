@model IEnumerable<EmployeeClient.Models.Domain.Book>

@{
    ViewData["Title"] = "Book Details";
}
<div class="card-header">
    <h5 class="font-weight-bold">Book Details</h5>
</div>
<div class="card-body">
    <div class="table-responsive">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Title</th>
                    <th>Genre</th>
                    <th>Publisher</th>
                    <th><a asp-controller="Book" class="btn btn-dark btn-sm" asp-action="Create">New Book</a></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var book in Model)
                {
                    <tr>
                        <td>@book.Id</td>
                        <td>@book.Title</td>
                        <td>@book.Genre</td>
                        <td>@book.Publisher</td>
                        <td>
                            <a class="btn btn-success btn-sm" asp-controller="Book" asp-action="Edit" asp-route-id="@book.Id">Edit</a>
                            <a class="btn btn-info btn-sm" asp-controller="Book" asp-action="View" asp-route-id="@book.Id">View</a>
                            <a class="btn btn-danger btn-sm" asp-controller="Book" asp-action="Delete" asp-route-id="@book.Id">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
